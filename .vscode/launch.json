    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Run G14",
            "type": "python",
            "request": "launch",
            "program": "examples/g14/run_g14.py",
            "args":[
                "--weighting=balanced",
                "--num-cpus=1",
                "--trials=1",
                "--seeds=data/seeds.txt",
                "--constrained",
                "--adapt-tol=1e-5",
                "--phi-tol=1e-5",
                "--dpo-tol=1e-9"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}